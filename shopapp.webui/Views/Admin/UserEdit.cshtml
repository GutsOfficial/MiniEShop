@model UserDetails

<form asp-controller="Admin" asp-action="UserEdit" method="POST" >
<div class="row">
  <div class="col-md-8">
  
  <div class="form-group">
  <input type="hidden" Name="UserId" asp-for="@Model.UserId">
    <label >First Name</label>
    <input type="text" class="form-control" asp-for="FirstName">   
  </div>
   <div class="form-group">
    <label >Last Name</label>
    <input type="text" class="form-control" asp-for="LastName" >   
  </div>
  <div class="form-group">
    <label >User Name</label>
    <input type="text" class="form-control" asp-for="UserName" >   
  </div>
  <div class="form-group">
    <label >Email </label>
    <input type="text" class="form-control" asp-for="Email" >   
  </div>
  <div class="form-group">
    <label >Last Name</label>
    <input type="text" class="form-control" asp-for="LastName" >   
  </div>
 
   
  
 
  <button type="submit" class="btn btn-primary">Save</button>

  </div>
  <div class="col-md-4">
    @foreach(var item in ViewBag.Roles){
              <div class="form-check">
          <input class="form-check-input" type="checkbox"  
          id="@item"
          name="selectedRoles"
          value="@item"
           @(Model.SelectedRoles.Any(i=>i==item)?"checked":"")>
          <label class="form-check-label" for="item">
          @item
          </label>
          </div>
    }
       <div class="custom-checkbox custom-control">
           
            <input type="checkbox" class="custom-control-input" asp-for="EmailConfirmed" > 
             <label asp-for="EmailConfirmed" class="custom-control-label" >EmailConfirmed</label>
          </div>
  </div>
</div>
</form>