@model ProductViewModel



<div class="row">
    <div class="col-md-12">
        <h1>Admin Panel</h1>
        <hr>
        <a class="btn btn-primary btn-sm" href="/admin/products/create">�r�n Ekle</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td style="width 30px;">Id</td>
                    <td style="width 100px;">Image</td>
                    <td >Name</td>
                    <td style="width 20px;">Price</td>
                     <td style="width 130px;">Price</td>

                </tr>
            </thead>
            <tbody>
                @if(Model.Products.Count>0)
                {
                @foreach (var item in Model.Products)
                        {
                <tr>
                    <td>@item.ProductId</td>
                    <td><img src="~/img/@item.ImageUrl" width="80"></td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>
                        <a class="btn btn-primary" href="/admin/products/@item.ProductId">
                            Details
                        </a>
                    </td>
                    <td>
                        <form asp-controller="Admin" asp-action="DeleteProduct" method="POST" style="display: inline;">
                            <input type="hidden" name="productId" value="@item.ProductId">
                            <button type="submit" class="btn btn-danger">
                                Delete
                            </button>
                        </form>

                    </td>

                </tr>
               }
            }
             else{
                <div class="alert alert-warning">
                    <h3>
                        NO PRODUCTS
                    </h3>
                </div>
                }

            </tbody>
            </table>
            </div>
            </div>