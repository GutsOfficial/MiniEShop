@model CategoryModel
<h1>Edit Product</h1>

<hr>
<div>
    <div class="col-md-4">
        <form asp-controller="Admin" asp-action="CategoryEdit" method="POST">
            <div class="form-group">
                <input type="hidden" Name="ProductId" asp-for="@Model.CategoryId">
                <label>Name</label>
                <input type="text" class="form-control" asp-for="Name">
            </div>
            <div class="form-group">
                <label>Url</label>
                <input type="text" class="form-control" asp-for="Url">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-12">
                <h1>Admin Panel</h1>
                <hr>
               
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <td style="width 30px;">Id</td>
                            <td style="width 100px;">Image</td>
                            <td>Name</td>
                            <td style="width 20px;">Price</td>
                            <td style="width 130px;">Price</td>

                        </tr>
                    </thead>
                    <tbody>
                        @if(Model.urunler.Count>0)
                {
                        @foreach (var item in Model.urunler)
                        {
                        <tr>
                            <td>@item.ProductId</td>
                            <td><img src="~/img/@item.ImageUrl" width="80"></td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>
                                <a class="btn btn-primary" href="/admin/categories/@item.ProductId">
                                    Details
                                </a>
                            </td>
                            <td>
                                <form asp-controller="Admin" asp-action="Deletefromcategory" method="POST" style="display: inline;">
                                    <input type="hidden" name="productId" value="@item.ProductId">
                                    <input type="hidden" name="categoryId" value="@Model.CategoryId">
                                    <button type="submit" class="btn btn-danger">
                                        Delete
                                    </button>
                                </form>

                            </td>

                        </tr>
               }
            }
             else{
                        <div class="alert alert-warning">
                            <h3>
                                NO PRODUCTS
                            </h3>
                        </div>
                }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
