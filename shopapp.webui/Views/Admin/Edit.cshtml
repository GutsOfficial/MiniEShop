@model ProductModel
 <h1>Edit Product</h1>

<hr>
<form asp-controller="Admin" asp-action="Edit" method="POST" enctype="multipart/form-data">
<div class="row">
  <div class="col-md-8">
  
  <div class="form-group">
  <input type="hidden" Name="ProductId" asp-for="@Model.ProductId">
    <label >Name</label>
    <input type="text" class="form-control" asp-for="Name">   
  </div>
   <div class="form-group">
    <label >Url</label>
    <input type="text" class="form-control" asp-for="Url" >   
  </div>
   <div class="form-group">
    <label >Description</label>
   <textarea id="editor" asp-for="Description" class="form-control" >
   
   </textarea>
  </div>
   <div class="form-group">
    <label >ImageUrl</label>
    
    <input type="hidden" class="form-control" asp-for="ImageUrl">  
    <img src="~/img/@Model.ImageUrl" width="80px">
    <input type="file" name="file" > 
  </div>
   <div class="form-group">
    <label >Price</label>
    <input type="text" class="form-control" asp-for="Price">   
  </div>
  
 
  <button type="submit" class="btn btn-primary">Submit</button>

  </div>
  <div class="col-md-4">
    @foreach(var item in (List<Category>)ViewBag.Categories){
              <div class="form-check">
          <input class="form-check-input" type="checkbox"  
          id="category_@(item.CategoryId)"
          name="categoryId"
          value="@item.CategoryId"
           @(Model.kategoriler.Any(i=>i.CategoryId==item.CategoryId)?"checked":"")>
          <label class="form-check-label" for="category_@(item.CategoryId)">
          @item.Name
          </label>
          </div>
    }
  </div>
</div>
</form>
<script src="/node_modules/ckeditor/ckeditor.js">
  </script>

  <script>
    CKEDITOR.replace('editor');
  </script>