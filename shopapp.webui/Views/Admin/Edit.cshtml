@model ProductModel
 <h1>Edit Product</h1>

<hr>
<form asp-controller="Admin" asp-action="Edit" method="POST">
  <div class="form-group">
  <input type="hidden" Name="ProductId" asp-for="@Model.ProductId">
    <label >Name</label>
    <input type="text" class="form-control" asp-for="Name">   
  </div>
   <div class="form-group">
    <label >Url</label>
    <input type="text" class="form-control" asp-for="Url" >   
  </div>
   <div class="form-group">
    <label >Description</label>
   <textarea asp-for="Description" class="form-control" >
   
   </textarea>
  </div>
   <div class="form-group">
    <label >ImageUrl</label>
    <input type="text" class="form-control" asp-for="ImageUrl">   
  </div>
   <div class="form-group">
    <label >Price</label>
    <input type="text" class="form-control" asp-for="Price">   
  </div>
  
 
  <button type="submit" class="btn btn-primary">Submit</button>
</form>