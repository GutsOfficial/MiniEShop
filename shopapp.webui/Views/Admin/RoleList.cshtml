@model IEnumerable<IdentityRole>



<div class="row">
    <div class="col-md-12">
        <h1>Role List</h1>
        <hr>
        <a class="btn btn-primary btn-sm" href="/admin/role/create">Role Ekle</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td style="width 30px;">Id</td>                  
                    <td>Role Name</td>
                    <td></td>
                   

                </tr>
            </thead>
            <tbody>
                @if(Model.Count()>0){
                @foreach(var item in @Model){
                <tr>
                    <td>@item.Id</td>
                   
                    <td>@item.Name</td>                   
                    <td>
                        <a class="btn btn-primary" href="/admin/role/@item.Id">
                            Role Edit
                        </a>
                    </td>
                    <td>
                        <form asp-controller="Admin" asp-action="RoleDelete" method="POST" style="display: inline;">
                            <input type="hidden" name="Id" value="@item.Id">
                            <button type="submit" class="btn btn-danger">
                                Delete
                            </button>
                        </form>

                    </td>

                </tr>
               }
            }
             else{
                <div class="alert alert-warning">
                    <h3>
                        NO Categories
                    </h3>
                </div>
                }

            </tbody>
        </table>
    </div>
</div>