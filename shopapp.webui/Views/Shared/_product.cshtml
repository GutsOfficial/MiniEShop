@model Product

<div class="card mb-2">
    <img class="card-img-top" src="~/img/@Model.ImageUrl" alt="">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <small class="text-muted"><i class="fas fa-lira-sign">@Model.Price</i></small>
<div class="card-footer text-center" >
    <a asp-controller="Shop" asp-action="Details" asp-route-url="@Model.Url" class="btn btn-primary btn-sm">Ä°ncele</a> 
    @if(User.Identity.IsAuthenticated){
        <form method="POST" asp-controller="Cart" asp-action="AddToCart" style="display:inline;" class="form-inline">
            <input type="hidden" name="productId" value="@Model.ProductId">
            <div class="input-group mb-3">
            <input type="number" name="quantity" class="form-control" min="1" value="1" step="1" style="width:100px;">
            <div class="input-group-append">
            <button type="submit">
            <i class="fas fa-cart-plus"></i>Add To Cart
            </button>
            </div>
            </div>
           

        </form>
 

        
    }
    
</div>       
       
     
   
    </div>
</div>   