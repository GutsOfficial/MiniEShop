
@model ProductDetailModel



<div class="row ">

<div class="col-md-3">
<img src="~/img/@Model.urun.ImageUrl" class="img-fluid">
</div>
<div class="col-md-9">

<h5 class="mb-3">@Model.urun.Name</h5><hr>
@foreach(var item in @Model.kategoriler){
<a asp-controller="shop" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">
@item.Name
</a>
}

<h6 class="card-text">

@Model.urun.Price
</h6>
<button type="submit" class="btn btn-primary btn-lg">
Karta ekle
</button>

</div>
</div>
<div class="row">
<div class="col-md-12">

<p class="p-3">@Model.urun.Description</p>
</div>
</div>
